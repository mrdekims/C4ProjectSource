<!DOCTYPE html>
<html>
<head>
  <title>ConnectFour Game - Home Page</title>
  <%= include_gon %>
  <%=stylesheet_link_tag  "templatemo_style.css" %>
  <%=stylesheet_link_tag  "coda-slider.css" %>
  <%=stylesheet_link_tag  "form_style.css" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "jquery-1.2.6.js" %>
  <%= javascript_include_tag "jquery.scrollTo-1.3.3.js" %>
  <%= javascript_include_tag "jquery.localscroll-1.2.5.js", :charset=>"utf-8" %>
  <%= javascript_include_tag "jquery.serialScroll-1.2.1.js", :charset=>"utf-8" %>
  <%= javascript_include_tag "coda-slider.js", :charset=>"utf-8" %>  
  <%= csrf_meta_tags %>
</head>
<body>
    <div id="slider">
    <div id="templatemo_wrapper">
        <div id="header">
            <div id="site_title"><h1><a href="http://www.templatemo.com">Free CSS Templates</a></h1></div>
            <div id="menu">
                <ul class="navigation">
                	<li><%= link_to 'About', 	:c4game          		, :class=>"selected" %></li>
                	<li><%= link_to 'Play', start_path	, :class=>"selected" %></li>
                </ul>
            </div>            
        </div>

        <div id="content">
            <div class="scroll">
                <div class="scrollContainer">

                    <!-- beg of home -->
                    <div class="panel" id="home">
                    	<h1>About the game</h1>
                    	<div class="col_400 float_l">
                            <%=yield :home_leftpane%>
                        </div>
                        <div class="col_400 float_r">
                            <%=yield :home_rightpane%>
                        </div>
                    </div>
                    <!-- end of home -->

				    <!-- Beg of start -->
                    <div class="panel" id="start">
                        <h1>Play Connect Four Game</h1>
                            <ul class="service_list">
                                <%=yield :play_pane%>
                            </ul>
                    </div>
                    <!-- End of start -->

               </div>
            </div>


        </div> <!-- end of content -->
        <div id="footer">
            <div id="copyright">
				Designed by <a href="http://www.templatemo.com" target="_parent">Free CSS Templates</a>
            </div>
        </div>

    </div> <!-- end of wrapper -->
    </div> <!-- end of slider -->

</body>
</html>